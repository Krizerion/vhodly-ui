{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm ci && npm run build",
    "watchPatterns": ["src/**", "public/**", "angular.json", "package.json"]
  },
  "deploy": {
    "startCommand": "serve dist/vhodly-app/browser -s -l $PORT",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
